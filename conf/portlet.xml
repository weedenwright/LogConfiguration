<?xml version="1.0"?>

<portlet-app>

     <portlet>
        <portlet-name>LOGGING_CONFIG_JSP</portlet-name>
        <display-name>Logging Config</display-name>
        <portlet-class>com.liferay.portlet.JSPPortlet</portlet-class>
        <portlet-info>
            <title>Log4j Configuration</title>
            <icon></icon>
        </portlet-info>
        <init-param>
            <name>view-jsp</name>
            <value>/ext/loggingConfig.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <security-role-ref>
            <role-name>CMS Administrator</role-name>
        </security-role-ref>
    </portlet>

</portlet-app>